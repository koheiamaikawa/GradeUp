<div class="main">
  <div class="main-wrapper">
    <h1>Search</h1>
      <div class="search">
        <ul>
          <li>
            <label class="word" for="people">人数</label> 
            <input type="number" id="people">
            <span class="word">人</span>
          </li>
          <li>   
            <label class="word" for="budget">予算</label>
            <input type="number" id="budget">
            <span class="word">円/人</span>       
          </li>
          <li>
            <label class="word" for="sports">スポーツ</label>
            <input class="box" type="text" id="sports">
          </li>
        </ul>
        <div class="area">
          <input class="word" type="radio" name="area" value="" id="hokkaido" checked>
          <label for="hokkaido">北海道</label>
          <input class="word" type="radio" name="area" value="" id="tohoku">
          <label for="tohoku">東北</label>
          <input class="word" type="radio" name="area" value="" id="kanto">
          <label for="kanto">関東</label>
          <input class="word" type="radio" name="area" value="" id="chubu">
          <label for="chubu">中部</label>
          <input class="word" type="radio" name="area" value="" id="kinki">
          <label for="kinki">近畿</label>
          <input class="word" type="radio" name="area" value="" id="chugoku">
          <label for="chugoku">中国</label>
          <input class="word" type="radio" name="area" value="" id="shikoku">
          <label for="shikoku">四国</label>
          <input class="word" type="radio" name="area" value="" id="kyushu">
          <label for="kyushu">九州</label>
          <input class="word" type="radio" name="area" value="" id="okinawa">
          <label for="okinawa">沖縄</label>
        </div>
    	  <%= form_tag(hotels_path,:method => 'get', class: "word") do %>
    		  <%= label_tag(:keyword, "Place") %>
    			<%= text_field_tag (:keyword)%>
    			<%= submit_tag 'Search' %>
    		<% end %>
  		</div>
  </div>
</div>

